{% extends 'BitcoinAdminBundle::base.html.twig' %}
{% block title 'Edit Product Category' %}
{% block page_heading 'Edit Product Category'%}
{% block javascript %}
<script type="text/javascript" src="{{ asset('bundles/bitcoinadmin/') }}libs/ckeditor/ckeditor.js" ></script>
<script type="text/javascript">
    CKEDITOR.replace();
</script>
{% endblock %}
{% block contentdata %}
<div class="tabular_cont">
    {% block form_widget %}
    {{ form_start(form, {'attr': {'class':'form-horizontal','autocomplete':'off'}}) }}
    <div class="span9 margin-auto">
        <div class="control-group">
            {{ form_label(form.categoryName, '', {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_widget(form.categoryName, {'attr': {'class': 'txtField', 'placeholder':'Category Name'}}) }}
                {{ show_error(form.categoryName) }}
            </div>
        </div>
        <div class="control-group">
            {{ form_label(form.description, '', {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_widget(form.description, {'attr': {'class': 'ckeditor ', 'placeholder':'Description'}}) }}
                {{ show_error(form.description) }}
            </div>
        </div>
        <div class="control-group">
            {{ form_label(form.fkParent, 'Parent Category', {'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_widget(form.fkParent, {'attr': {'class': 'selectBox', 'placeholder':'Email'}}) }}
                {{ show_error(form.fkParent) }}
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                {% form_theme form _self %}
                {{ form_widget(form.submit, {'attr':{'class':'dark-button'}, 'label':'Save'}) }}
                <button type="reset" class="light-button">Cancel</button></p>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    {% endblock form_widget %}
</div>  

{% endblock %}
