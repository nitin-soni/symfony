{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ProductReview list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Title</th>
                <th>Review</th>
                <th>Rating</th>
                <th>Published</th>
                <th>Createddate</th>
                <th>Modifieddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product-review_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fullname }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.review }}</td>
                <td>{{ entity.rating }}</td>
                <td>{{ entity.published }}</td>
                <td>{% if entity.createdDate %}{{ entity.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedDate %}{{ entity.modifiedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product-review_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product-review_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product-review_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
