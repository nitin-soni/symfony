<aside class="col-left sidebar">
    <script type="text/javascript">
        //<![CDATA[
        function toggleMenu(el, over)
        {
            if (over) {
                Element.addClassName(el, 'over');
            }
            else {
                Element.removeClassName(el, 'over');
            }
        }
        //]]>
    </script>
    <style>
        a.hitarea{
            float: left;
            height: auto !important;
            margin-right: 0px !important;
            margin-top: 0px !important;;
            width: auto !important;;
        }
        .clear{
            clear: both ;
        }
    </style>
    <!-- ================== Tree View ================ -->
    <div class="block block-side-nav-container">    
        <div class="block-title">
            <strong><span>Categories</span></strong>
        </div>
        <div class="block-content">
            <div class="side-nav">
                <ul id="category-treeview" class="treeview-side treeview">
                    {% if categories is defined and categories is not empty  %}
                        {{ show_category(categories) }}
                    {% endif %}           
                </ul>
            </div>
        </div>
    </div> 

    <div class="block block-cart">
        <div class="block-title">
            <strong><span>My Cart</span></strong>
        </div>
        <div class="block-content">
            <p class="empty">You have no items in your shopping cart.</p>
        </div>
    </div>

    <div class="block block-banner">

    </div>
    
    {% if product.images is defined and product.images is not empty  %}
    <div class="block block-related">
        <div class="block-title">
            <strong><span>Latest products</span></strong>
        </div>
        <div class="block-content">      
            <ol class="mini-products-list" id="block-newproducts">
                {% for key, product in latestProduct %}
                <li class="item">                
                    <div class="product" style="margin-left: 0px;">
                        <a href="#" title="Nose rings" class="product-image"><img src="{{ asset('bundles/bitcoinsite/') }}images/jr00575-wgp900_1_lar_2.jpg" width="50" height="50" alt="Nose rings" /></a>
                        <div class="product-details">
                            <p class="product-name"><a href="#">{{ product.productTitle }}</a></p>
                            <div class="price-box"><span class="price">${{ product.price }}</span></div>
                            <p><a href="#"  rel="nofollow" class="addto-cart">Add to Cart</a></p>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ol>
            {#
            <div class="actions"><a href="#">See All</a></div>
            <script type="text/javascript">decorateList('block-newproducts', 'none-recursive')</script>
            #}  
        </div>    
    </div>
    {% endif %}
</aside>